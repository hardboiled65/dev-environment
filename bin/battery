#!/bin/sh

MAX_WIDTH=30

PERCENTAGE=`cat /sys/class/power_supply/BAT0/capacity`

echo $PERCENTAGE%

cat /sys/class/power_supply/BAT0/status

COUNT=`python3 -c "print(int($PERCENTAGE / (100 / $MAX_WIDTH)))"`

printf "["
for i in $(seq 1 $MAX_WIDTH)
do
	if [[ $i -le $COUNT ]]; then
		printf "#"
	else
		printf "-"
	fi
done
printf "]"
echo ""
